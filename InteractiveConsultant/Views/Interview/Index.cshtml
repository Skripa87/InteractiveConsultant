@model InteractiveConsultant.Models.Question
@{byte checker = 255; }
<div class="row qestion_set">
    <div class="col-md-12">
        <p>@Model.TextQuestion</p>
    </div>
</div>
@using (Html.BeginForm("PreNextQuestion", "Interview", FormMethod.Post))
{
    foreach (var a in Model.Answers)
    {
        <div class="row content_body">
            <div class="col-md-2">
                @if (ViewData["AnswerID"] != null)
                {
                    checker = (byte)ViewData["AnswerID"];
                }
                else
                {
                    checker = 255;
                }
                @Html.RadioButton("responses", a.IDAnswer.ToString(), a.IDAnswer.Equals(checker));
            </div>
            <div class="col-md-2">
                @if (a.ImagePath != null)
                {
                    <img src=@a.ImagePath />
                }
            </div>
            <div class="col-md-8">
                @if (a.TextAnswer != null)
                {
                    <p class="get_answer">@a.TextAnswer</p>
                }
            </div>
          </div>
     }
        <div class="row get_answer">
            <div class="col-md-12">
                <button name="action" class="btn btn-default" value="next">Следующий вопрос</button>
            </div>
        </div>
  }
